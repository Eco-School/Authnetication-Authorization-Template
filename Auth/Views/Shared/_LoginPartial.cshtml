@using Microsoft.AspNetCore.Identity
@using Auth.Models.Data.Entities
@inject SignInManager<User> _signInManager
@inject UserManager<User> _userManager

<ul class="navbar-nav">
@if (_signInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark"  href="/Account/Index" title="Manage">Hello @User.Identity.Name</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline"  action="/Account/Logout" >
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" href="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" href="/Account/Login">Login</a>
    </li>
}
</ul>
