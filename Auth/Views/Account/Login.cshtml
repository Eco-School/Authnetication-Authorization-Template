@model Auth.Models.ViewModels.LoginViewModel
<div class="container login-container align-content-center">
        <div class="col-6 login-form-2">
            <h3>Login</h3>
            <form method="post" action="Login">
                <div class="form-group">
                    <input type="number" class="form-control" placeholder="Your Email *" asp-for="PhoneNumber" value="" />
                </div>
                <div class="form-group">
                    <input type="password" asp-for="Password" class="form-control" placeholder="Your Password *" value="" />
                </div>
                <div class="form-group">
                    <input type="submit" class="btnSubmit" value="Login" />
                </div>
                <div class="form-group">
                    <a href="#" class="ForgetPwd" value="Login">Forget Password?</a>
                </div>
            </form>
        </div>
</div>